# Server Configuration
NODE_ENV=production
PORT=3001

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ERPNext Configuration
ERPNEXT_API_URL=https://prowhey99.com/api/resource/
ERPNEXT_API_KEY=your_api_key_here
ERPNEXT_API_SECRET=your_api_secret_here
ERPNEXT_VERSION=v1

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
QUEUE_BATCH_SIZE=10
QUEUE_RATE_LIMIT=5
QUEUE_PROCESSING_INTERVAL=5000

# CORS
ALLOWED_ORIGINS=https://your-app-domain.com,https://your-app-domain-2.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using
